# AMI Initialization Commands
sudo yum install git
git clone https://github.com/wuyangjack/MiniGoogle.git
export CIS455_USER="ec2-user" (add to ~/.bashrc)

# Connect to EC2
chmod 400 ../login.pem
ssh-add ../login.pem
export CIS455_USER="ec2-user"
